extends _layout.jade

block meta
  - var title="todolist"
  include partials/_meta.jade

block content
  .p-todolist.insidePage
    .container
      .countdownTimer
        .countdownTimer__playCircle
          .countdownTimer__playCircle__innerCircle
          i.material-icons play_arrow
        .countdownTimer__timer 25:00
        .countdownTimer__description THE FIRST THING TO DO TODAY

      nav.navbar
        a(href="todolist.html").navbar__item.navbar__item--active
          i.material-icons.md-36 list
          | TO-DO LIST
        a(href="analytics.html").navbar__item
          i.material-icons.md-36 insert_chart
          | ANALYTICS
        a(href="ringtones.html").navbar__item
          i.material-icons.md-36 library_music
          | RINGTONES
      .mainRow
        .content
          .form
              .form__plusGroup.form__plusGroup--workMode<!--.form__plusGroup--breakMode-->
                input.form__input(type="text",placeholder="ADD A NEW MISSIONâ€¦")
          h3.h3 
            span TO-DO
            i.material-icons arrow_drop_up
          ul.todoList
            each item in ['FIRST','SECOND', 'THIRD', 'FORTH','FIVE','SIX']
              li.todoList__item
                .todoList__item__title
                  label
                    input(type="radio", name="todoRadio",checked="checked")
                    i.material-icons.uncheck radio_button_unchecked
                    i.material-icons.checked radio_button_checked
                    span THE #{item} THING TO DO TODAY
                  i.material-icons.todoList__item__title__playCircleIcon play_circle_outline
          h3.h3 
            span DONE
            i.material-icons arrow_drop_up
      .close
        a(href="index.html")
          i.material-icons.md-48 clear
        .sign POMODORO

